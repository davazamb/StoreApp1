@model Models.Department



    <div class="modal-header">
        <a href="@Url.Action("Index" , "Departments")" class="close"><i class="fa fa-times"></i></a>
        <h4 class="modal-title" id="myModalLabel">Delete - @Model.Name</h4>
    </div>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.DepartmentId)
    <div class="modal-body">
        <h4 class="text-center">Are you sure you want to delete this?</h4>
        <hr />
        <div class="form-group">
            <h4 class="text-center" style="color:red">
                @Html.DisplayNameFor(model => model.Name) =            
                @Html.DisplayFor(model => model.Name)</h4>
</div>
    </div>
        <br />

@using (Html.BeginForm()){
        <div class="modal-footer">
            @Html.AntiForgeryToken()
            <a href="@Url.Action("Index" , "Departments")" class="btn btn-default"><i class="fa fa-times"></i> Close</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
            @*<button type="submit" class="btn btn-danger" data-reset="true" data-ajax="true">
                    <i class="fa fa-floppy-o"></i> Delete
                </button>*@
        </div>    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
        function CerrarCreate() {
            $("#modalInfo").modal('hide');
        }
</script>
    }